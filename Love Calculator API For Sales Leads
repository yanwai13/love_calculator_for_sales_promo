<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<script>

    const replies = [{ percentage : 40, photo : "https://media.tenor.com/W8M6ilWudzUAAAAd/john-travolta-wheres-the-soap.gif", message : "Turn the tides of fate this Christmas. Even low compatibility can find sparks with the right gift. Explore the selection of soap and ignite a new flame. 🎁🔥" },
                    { percentage : 80, photo : "https://media.tenor.com/CFzrr_vsdp0AAAAd/give-chocolate.gif", message :  "Embrace the magic of Christmas together. For those with a moderate spark, our handpicked lover gifts will kindle a brighter flame. A chocolate set that make this holiday season unforgettable. 🎁💖" },
                    { percentage : 100, photo : "https://media.tenor.com/10jBn-ETuTMAAAAC/harry-styles-perfect.gif", message : "Celebrate the holiday season with a love that knows no bounds. For high compatibility lovers, our bedding sets are designed to deepen your connection. " },
]
    document.getElementById('inputForm').addEventListener('submit', function(event) {
        
        event.preventDefault();
       

        var loverOne = document.getElementById('loverOne').value;
        var loverTwo = document.getElementById('loverTwo').value;
       

       const options = {
	        method: 'GET',
	        headers: {
		    'X-RapidAPI-Key': '7e67bd2e22msh4b83a04df564f8ap1ff555jsn6731694e833f',
	    	'X-RapidAPI-Host': 'love-calculator.p.rapidapi.com'
	    }
        };  


        fetch(`https://love-calculator.p.rapidapi.com/getPercentage?fname=${loverOne}&sname=${loverTwo}`, options)
            .then(response => response.json())
            .then(response => {
                productResult (response, replies);       
            })
            .catch(err => console.error(err));


        });

    function productResult (res, replies){
      
        const item = replies.find(item => res.percentage < item.percentage);

        if (item) {
            print( res.percentage, item.message, item.photo);
            
        }
    }

    function print(percentage, message, photo){
        document.getElementById("percentage").innerText = `Match Percentage ${ percentage} %`;   
       
        /*Need further Improvement : remove the image if the class list imgClass exist the first time*/
        let parentElement = document.getElementById('photo');
        let imgElement = document.createElement('img');
        imgElement.classList.add('imgClass');
        imgElement.classList.add('my-5');
        imgElement.src = photo; 
        parentElement.appendChild(imgElement);

        document.getElementById("result").innerText = `Match Percentage ${message} %`; 
    }
            
   
   

</script>

